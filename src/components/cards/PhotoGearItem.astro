---
import type { PhotoGearItem } from '../../data/portfolioData';

const { item } = Astro.props as { item: PhotoGearItem };
---

<li>
	<a
		href={item.url}
		target="_blank"
		rel="noreferrer"
		class="flex items-center gap-3 rounded-2xl border border-[rgba(44,166,255,0.18)] bg-[rgba(5,16,36,0.75)] px-4 py-3 transition hover:border-[rgba(44,166,255,0.45)]"
	>
		<span class="flex h-9 w-9 items-center justify-center rounded-full border border-[rgba(44,166,255,0.35)] bg-[rgba(44,166,255,0.12)]">
			<span
				class="inline-flex h-4 w-4"
				aria-hidden="true"
				set:html={item.iconSvg}
			></span>
		</span>
		<span>
			<span class="block text-xs uppercase tracking-[0.25em] text-[color:var(--ink-2)]">{item.label}</span>
			<span class="block text-[color:var(--ink-0)]">{item.name}</span>
		</span>
	</a>
</li>
