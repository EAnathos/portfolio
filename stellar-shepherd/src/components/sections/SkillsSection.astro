---
import type { SkillGroup } from '../../data/portfolioData';
import SkillGroupCard from '../cards/SkillGroupCard.astro';

const { groups } = Astro.props as { groups: SkillGroup[] };
---

<section id="competences" class="relative z-10 mx-auto w-full max-w-6xl px-6 pb-20">
	<div class="fade-up flex items-center justify-between">
		<div>
			<p class="text-xs uppercase tracking-[0.35em] text-[color:var(--ink-2)]">Competences</p>
			<h2 class="mt-3 text-3xl font-semibold">Stack technique.</h2>
		</div>
		<p class="hidden text-sm text-[color:var(--ink-2)] md:block">En constante evolution.</p>
	</div>
	<div class="mt-10 grid gap-6 md:grid-cols-2">
		{groups.map((group) => (
			<SkillGroupCard group={group} />
		))}
	</div>
</section>
